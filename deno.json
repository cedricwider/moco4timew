{
  "tasks": {
    "dev": "deno run --watch main.ts",
    "test": "deno test --allow-read tests/",
    "test:watch": "deno test --allow-read --watch tests/ src/",
    "check": "deno check src/**/*.ts",
    "build": "deno compile --allow-env --allow-read --allow-write --allow-net main.ts"
  },
  "fmt": {
    "options": {
      "lineWidth": 80,
      "indentWidth": 2,
      "singleQuote": true
    }
  },
  "imports": {
    "@scmmishra/pico-search": "npm:@scmmishra/pico-search@^0.5.4",
    "@std/assert": "jsr:@std/assert@1",
    "@std/testing": "jsr:@std/testing@^1.0.9"
  }
}
